    }

    .nav-link span {
        font-size: 1rem;
        opacity: 0;
        transition: opacity 0.3s, transform 0.3s;
        transform: translateX(-10px);
    }

    .sidebar:hover .nav-link span {
        opacity: 1;
        transform: translateX(0);
    }

</style>
