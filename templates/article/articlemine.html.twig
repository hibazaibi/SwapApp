{% extends 'base.html.twig' %}

{% block title %}My Articles{% endblock %}

{% block body %}
    <h1>My Articles</h1>

    <div class="row">
        {% for article in articles %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.titre }}</h5>
                        <p class="card-text">
                            <strong>Description:</strong> {{ article.description }}
                        </p>
                        <p class="card-text">
                            <strong>Condition:</strong> {{ article.conditionarticle }}
                        </p>
                        <p class="card-text">
                            <strong>Date:</strong> {{ article.date ? article.date|date('Y-m-d') : 'N/A' }}
                        </p>
                        <p class="card-text">
                            <strong>Status:</strong> {{ article.status }}
                        </p>
                        <p >
                            {% if article.photo1 %}
                                <img style="width: 30%" src="data:image/jpeg;base64,{{ article.encodedPhoto1 }}" alt="Photo 1">
                            {% else %}
                                <img src="{{ asset('images/default-placeholder.png') }}" alt="No Image" class="img-fluid rounded-start" style="height: 100%; object-fit: cover;">
                            {% endif %}

                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary btn-sm">Show</a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">You have no articles.</div>
            </div>
        {% endfor %}

    </div>

{% endblock %}
