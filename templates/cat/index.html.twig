{% extends 'base.html.twig' %}

{% block title %}Categorie Index{% endblock %}
{% block stylesheets %}
    <style>


        .title {
            font-size: 28px;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .table-container {
            overflow-x: auto;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 4px;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            margin: 0 5px;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .no-records {
            text-align: center;
            color: #888;
            font-style: italic;
        }
        .sidebar {
            width: 80px; /* Adjust for the collapsed state */
            height: calc(100vh - 56px); /* Full height minus navbar height */
            position: fixed; /* Fix the sidebar to the left */
            top: 56px; /* Offset to account for the navbar */
            left: 0;
            background-color: #343a40; /* Sidebar background */
            transition: width 0.3s;
            overflow-x: hidden;
            z-index: 1030; /* Ensure it stays on top */
        }

        /* When hovered, expand the sidebar */
        .sidebar:hover {
            width: 200px; /* Adjust width as needed */
        }

        /* Content wrapper to align next to the sidebar */
        .content-wrapper {
            margin-left: 80px; /* Match the width of the collapsed sidebar */
            flex-grow: 1;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        .sidebar:hover + .content-wrapper {
            margin-left: 200px; /* Match the expanded sidebar width */
        }

    </style>{% endblock %}
{% block body %}
    <div class="d-flex">{% include 'sidebar.html.twig' %}
        <div class="flex-grow-1 p-4">
            {% block content %}
    <div class="container mt-4">
        <h1 class="title">Categories List</h1>

        <div class="table-container mb-4">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.name }}</td>
                        <td>
                            <a href="{{ path('app_cat_show', {'id': categorie.id}) }}" class="btn btn-primary">Show</a>
                            <a href="{{ path('app_cat_edit', {'id': categorie.id}) }}" class="btn btn-warning">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="actions">
            <a href="{{ path('app_cat_new') }}" class="btn btn-success">Create New Category</a>
        </div>
    </div>
{% endblock %}


</div>
</div>             {% endblock %}