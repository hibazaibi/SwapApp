<style>



    .sidebar {
        width: 60px;
        transition: width 0.3s;
        flex-shrink: 0;
        height: calc(100vh - 56px); /* Adjust for navbar height if present */
        position: fixed;
        top: 56px; /* Offset for navbar */
        background-color: #343a40;
        overflow-x: hidden;
    }

    .sidebar:hover {
